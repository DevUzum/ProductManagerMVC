@model ProductManagerMVC.Models.Produto

@{
    ViewData["Title"] = "Excluir Produto";
}

<h1>Excluir Produto</h1>

<h3>Você tem certeza que deseja excluir este produto?</h3>

<div class="form-group">
    <label>Nome</label>
    <p class="form-control-static">@Model.Nome</p>
</div>
<div class="form-group">
    <label>Preço</label>
    <p class="form-control-static">@Model.Preco</p>
</div>
<div class="form-group">
    <label>Categoria</label>
    <p class="form-control-static">@Model.Categoria</p>
</div>
<div class="form-group">
    <label>Estoque</label>
    <p class="form-control-static">@Model.Estoque</p>
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancelar</a>
</form>
