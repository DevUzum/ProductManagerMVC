@model ProductManagerMVC.Models.Produto

@{
    ViewData["Title"] = "Criar Produto";
}

<h1>Criar Produto</h1>

<form asp-action="Create">
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Preco">Preço</label>
        <input asp-for="Preco" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Categoria">Categoria</label>
        <input asp-for="Categoria" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Estoque">Estoque</label>
        <input asp-for="Estoque" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Voltar</a>
</form>
